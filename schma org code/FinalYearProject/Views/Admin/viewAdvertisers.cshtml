    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Advertiser Detail</h2>

<table class="table">
    <tr>
        <th>
                 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SevenDayEpc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThreeMonthEpc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountStatus)
        </th>       
       
        <th>
            @Html.DisplayNameFor(model => model.RelationshipStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobileTracking)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NetworkRank)
        </th>
