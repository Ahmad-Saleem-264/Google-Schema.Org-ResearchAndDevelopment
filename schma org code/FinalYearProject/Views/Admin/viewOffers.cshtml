@{
    int page_num = ViewBag.id;
    int total_page = ViewBag.totalpage;
}

@if (page_num < 3)
{
    <div style="text-align:center">
        <ul class="pagination">
            @if (page_num == 1)
            {
                <li class="active"><a href="/Admin/ViewOffers/1">1</a></li>
                <li><a href="/Admin/ViewOffers/2">2</a></li>
                <li><a href="/Admin/ViewOffers/3">3</a></li>
                <li><a href="/Admin/ViewOffers/4">4</a></li>
                <li><a href="/Admin/ViewOffers/5">5</a></li>
            }
            @if (page_num == 2)
            {
                <li><a href="/Admin/ViewOffers/1">1</a></li>
                <li class="active"><a href="/Admin/ViewOffers/2">2</a></li>
                <li><a href="/Admin/ViewOffers/3">3</a></li>
                <li><a href="/Admin/ViewOffers/4">4</a></li>
                <li><a href="/Admin/ViewOffers/5">5</a></li>
            }



        </ul>
    </div>
}
else if (page_num > ((total_page) - 2))
{

    <div style="text-align:center">
        <ul class="pagination">

            @if (page_num == (total_page - 1))
            {
                <li><a href="/Admin/ViewOffers/@(total_page - 4)"> @(total_page - 4) </a></li>
                <li><a href="/Admin/ViewOffers/@(total_page - 3)">@(total_page - 3)</a></li>
                <li><a href="/Admin/ViewOffers/@(total_page - 2)">@(total_page - 2)</a></li>
                <li class="active"><a href="/Admin/ViewOffers/@(total_page - 1)">@(total_page - 1)</a></li>
                <li><a href="/Admin/ViewOffers/@(total_page)">@(total_page)</a></li>
            }
            @if (page_num == total_page)
            {
                <li><a href="/Admin/ViewOffers/@(total_page - 4)"> @(total_page - 4) </a></li>
                <li><a href="/Admin/ViewOffers/@(total_page - 3)">@(total_page - 3)</a></li>
                <li><a href="/Admin/ViewOffers/@(total_page - 2)">@(total_page - 2)</a></li>
                <li><a href="/Admin/ViewOffers/@(total_page - 1)">@(total_page - 1)</a></li>
                <li class="active"><a href="/Admin/ViewOffers/@(total_page)">@(total_page)</a></li>
            }


        </ul>
    </div>

}


else {


    <div style="text-align:center">
        <ul class="pagination">
            <li><a href="/Admin/ViewOffers/@(page_num-2)">@(page_num - 2)</a></li>
            <li><a href="/Admin/ViewOffers/@(page_num-1)">@(page_num - 1)</a></li>
            <li class="active"><a href="/Admin/ViewOffers/@(page_num)">@(page_num)</a></li>
            <li><a href="/Admin/ViewOffers/@(page_num+1)">@(page_num + 1)</a></li>
            <li><a href="/Admin/ViewOffers/@(page_num+2)">@(page_num + 2)</a></li>
        </ul>
    </div>

}