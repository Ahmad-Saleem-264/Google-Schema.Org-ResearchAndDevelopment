@model IEnumerable<FinalYearProject.Models.Product>

@{
    ViewBag.Title = "productSearch";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Products Against @ViewBag.Key</h2>

<table class="table">
    <tr>
        <th>

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RetailPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Advertiser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdvertisorCategory)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.CatalogID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Currency)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.InStock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManufacturerSKU)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.SKU)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UPC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductAutoKey)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifyDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManufactureName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "productEdit", new { id = item.ProductAutoKey })
                @Html.ActionLink("Details", "productDetails", new { id = item.ProductAutoKey })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RetailPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Advertiser.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdvertisorCategory)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CatalogID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency)
            </td>


            <td>
                @Html.DisplayFor(modelItem => item.InStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufacturerSKU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SKU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UPC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductAutoKey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifyDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufactureName)
            </td>

        </tr>
    }

</table>